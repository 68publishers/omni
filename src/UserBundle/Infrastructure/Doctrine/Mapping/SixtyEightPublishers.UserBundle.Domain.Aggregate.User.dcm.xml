<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SixtyEightPublishers\UserBundle\Domain\Aggregate\User" table='"user"'>
        <indexes>
            <index name="idx_user_created_at" columns="created_at" />
        </indexes>

        <id name="id" column="id" type="SixtyEightPublishers\UserBundle\Domain\Dto\UserId" unique="true" />

        <field name="createdAt" column="created_at" type="datetime_immutable" />

        <field name="username" column="username" type="SixtyEightPublishers\UserBundle\Domain\Dto\Username" unique="true" />

        <field name="password" column="password" type="SixtyEightPublishers\UserBundle\Domain\Dto\HashedPassword" nullable="true" />

        <field name="emailAddress" column="email_address" type="SixtyEightPublishers\ArchitectureBundle\Domain\Dto\EmailAddress" unique="true" />

        <embedded name="name" class="SixtyEightPublishers\UserBundle\Domain\Dto\Name" use-column-prefix="false" />

        <field name="roles" column="roles" type="SixtyEightPublishers\UserBundle\Domain\Dto\Roles">
            <options>
                <option name="jsonb">true</option>
            </options>
        </field>

        <field name="version" column="version" type="integer" />
    </entity>

</doctrine-mapping>
