<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SixtyEightPublishers\ForgotPasswordBundle\Domain\Aggregate\PasswordRequest" table="password_request">
        <indexes>
            <index name="idx_password_request_requested_at" columns="requested_at" />
            <index name="idx_password_request_email_address" columns="email_address" />
        </indexes>

        <id name="id" column="id" type="SixtyEightPublishers\ForgotPasswordBundle\Domain\Dto\PasswordRequestId" unique="true" />

        <field name="emailAddress" column="email_address" type="SixtyEightPublishers\ArchitectureBundle\Domain\Dto\EmailAddress" />

        <field name="status" column="status" type="SixtyEightPublishers\ForgotPasswordBundle\Domain\Dto\Status" />

        <field name="requestedAt" column="requested_at" type="datetime_immutable" />

        <field name="expiredAt" column="expired_at" type="datetime_immutable" />

        <field name="finishedAt" column="finished_at" type="datetime_immutable" nullable="true" />

        <embedded name="requestDeviceInfo" class="SixtyEightPublishers\ForgotPasswordBundle\Domain\Dto\DeviceInfo" column-prefix="request_" />

        <embedded name="finishedDeviceInfo" class="SixtyEightPublishers\ForgotPasswordBundle\Domain\Dto\DeviceInfo" column-prefix="finished_" />

        <field name="version" column="version" type="integer" />
    </entity>

</doctrine-mapping>
